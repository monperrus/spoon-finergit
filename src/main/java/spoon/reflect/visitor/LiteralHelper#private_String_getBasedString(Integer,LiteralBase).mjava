private
static
String
getBasedString
(
Integer
value
,
LiteralBase
base
)
{
if
(
base
==
LiteralBase
.
BINARY
)
{
return
"0b"
+
Integer
.
toBinaryString
(
value
)
;
}
else
if
(
base
==
LiteralBase
.
OCTAL
)
{
return
"0"
+
Integer
.
toOctalString
(
value
)
;
}
else
if
(
base
==
LiteralBase
.
HEXADECIMAL
)
{
return
"0x"
+
Integer
.
toHexString
(
value
)
;
}
return
Integer
.
toString
(
value
)
;
}
